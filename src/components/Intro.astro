<style is:global lang="scss">
  @use "../style/variables/mixins" as *;
  @use "../style/variables/functions" as *;

  .section-intro {
    min-height: calc(100vh - 200px);
    @include screen(mobile) {
      padding-top: size(14);
      margin-top: size(10);
      .action-buttons a {
        font-size: large;
      }
    }
  }

  // typing effect animation
  span.intro {
    .animated-name {
      border-right: solid 5px rgba(255, 255, 255, 0.75);
      white-space: nowrap;
      overflow: hidden;
      color: #ff7f50;

      animation: animated-text 2s linear 1s 1 normal both,
        animated-cursor 1s linear infinite;
    }
    @include screen(mobile) {
      font-size: 2.3rem;
      .animated-name {
        animation: animated-text-mobile 2s linear 1s 1 normal both,
          animated-cursor 1s linear infinite;
      }
    }
  }

  /* text animation */
  @keyframes animated-text-mobile {
    from {
      width: 0;
    }
    to {
      width: 175px;
    }
  }
  @keyframes animated-text {
    from {
      width: 0;
    }
    to {
      width: 270px;
    }
  }
  /* cursor animations */
  @keyframes animated-cursor {
    from {
      border-right-color: var(--color-neutral-800);
    }
    to {
      border-right-color: transparent;
    }
  }
  @keyframes blink {
    from {
      border: var(--color-neutral-500);
      color: var(--color-neutral-500);
    }
    to {
      border: transparent;
      color: transparent;
    }
  }

  .illustration-container {
    position: relative;
    svg {
      position: absolute;
      z-index: -1;
      inset: -140px auto;
    }

    @include screen(mobile) {
      display: none;
    }
  }

  .arrow-direction {
    position: absolute;
    bottom: 2%;
    left: 45%;
    z-index: 2;
    a {
      animation: blink 1s linear infinite;
    }
  }
</style>
