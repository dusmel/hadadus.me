---
import Icon from "components/common/Icon.astro";

const menus: { label: string; href: string }[] = [
  { label: "About", href: "/#about" },
  { label: "Experience", href: "/#experience" },
  { label: "Projects", href: "/#projects" },
  { label: "Contact", href: "/#contact" },
];
---

<div class="header py-5 mb-12">
  <div class="flex justify-between">
    <a href="/" class="site-title flex">
      <Icon
        icon="terminal"
        color="white"
        size="1.6em"
      />
      <span>Hadad Dus</span>
    </a>
    <nav>
      <ul class="flex center gap-3">
        {
          menus.map((menu, index) => (
            <li class="menu-item">
              <a href={menu.href} class="flex gap-1">
                <span class="menu-item-number text-accent-400">
                  0{index + 1}.{" "}
                </span>
                <span>{menu.label}</span>
              </a>
            </li>
          ))
        }
      </ul>
    </nav>
    <div class="flex gap-4 center">
      <a target="_blank" href="https://github.com/dusmel" class="button-github | flex center gap-1 button"
        ><Icon icon="github" size="15" />
        Github
      </a>
      <div class="flex gap-2 bg-neutral-200 py-1 px-3 radius-flat">
        <Icon
          data-onclick="light"
          type="button"
          icon="light"
          size="18"
          color="var(--color-neutral-600)"
        />
        <Icon
          data-onclick="dark"
          type="button"
          icon="dark"
          size="18"
          color="var(--color-neutral-600)"
        />
      </div>
    </div>
  </div>
</div>

<style>
  .button-github {
    line-height: 0;
    padding-block: 0.35rem;
  }
  nav a {
    --font-size: var(--fs-500);
    text-decoration: none;
    font-size: var(--font-size);
    font-weight: var(--fw-bold);
  }
  .nav-items {
  }
  .menu ul {
    list-style: none;
    gap: var(--gap-8);
  }

  .menu-item a {
    font-size: var(--fs-300);
  }
  .menu-item-number {
    font-size: var(--fs-200);
    color: #ba90c6;
  }

  ul {
    list-style: none;
  }
</style>

<script>
  const buttons = document.querySelectorAll("[data-onclick]");
  buttons.forEach((button) => {
    button?.addEventListener("click", () => {
      const mode = button.getAttribute("data-onclick") as "light" | "dark";
      const htmlNode = document.querySelector("html[data-theme]");
      htmlNode?.setAttribute("data-theme", mode);
    });
  });
</script>
